{
  "#": "NLP.js chat-bot configuration.",

  "X_pathPipelines": "./bot/pipelines.md",

  "pathPlugins": "./src/plugins",

  "settings": {
    "nlp": {
      "corpora": [
        "./bot/corpus-en.json"
      ]
    },

    "console": {
      "debug": true
    },

    "api-server": {
      "clientPath": "./public",
      "port": 3000,
      "serveBot": true
    },

    "msbf": {
      "apiPath": "",
      "messagesPath": "/api/messages",
      "X_appId": "<YOUR MICROSOFT BOT APP ID>",
      "X_appPassword": "<YOUR MICROSOFT BOT PASSWORD>"
    }
  },

  "use": [ "Basic", "ConsoleConnector", "ExpressApiServer", "DirectlineConnector" ],

  "X_not_used": [ "MsbfConnector" ]
}
